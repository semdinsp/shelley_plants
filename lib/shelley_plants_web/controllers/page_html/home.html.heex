<Layouts.flash_group flash={@flash} />

<%!-- Hero section --%>
<section class="relative overflow-hidden bg-gradient-to-br from-green-50 to-emerald-100 dark:from-green-950 dark:to-emerald-900">
  <div class="mx-auto max-w-5xl px-6 py-24 sm:py-32 lg:px-8">
    <div class="text-center">
      <p class="text-sm font-semibold uppercase tracking-widest text-green-700 dark:text-green-400 mb-4">
        Celebrating Ontario's Natural Heritage
      </p>
      <h1 class="text-4xl font-bold tracking-tight text-balance sm:text-6xl mb-6 text-stone-900 dark:text-stone-100">
        Discover Ontario's<br />Native Plants
      </h1>
      <p class="mx-auto max-w-2xl text-lg leading-8 text-stone-700 dark:text-stone-300 mb-10">
        A curated guide to the wildflowers, grasses, and perennials that belong here —
        supporting local ecosystems, attracting pollinators, and bringing lasting beauty
        to your garden.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href={~p"/plants"} class="btn btn-primary btn-lg gap-2">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="size-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
